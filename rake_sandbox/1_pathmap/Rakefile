task default: :list_files

directory 'ship_itðŸš¢'

task list_files: 'Rakefile' do
  Rake::FileList.new('**/*')
    .pathmap("%f")
    .each { |file| puts file }

  puts "-------Rename-files and ext----------"

  Rake::FileList.new('**/*.md')
    .pathmap("%{ch,lalala}X.dida")
    .each { |file| puts file }
end

task :clean do
  rm_rf 'ship_itðŸš¢'
end
