task default: :list_files

directory 'ship_itğŸš¢'

task list_files: 'Rakefile' do
  Rake::FileList.new('**/*')
    .pathmap("%f")
    .each { |file| puts file }

  puts "-------Rename-files and ext----------"

  Rake::FileList.new('**/*.md')
    .pathmap("%{ch,lalala}X.dida")
    .each { |file| puts file }
end

task :clean do
  rm_rf 'ship_itğŸš¢'
end

task :touch => 'ship_itğŸš¢' do
  touch 'ship_itğŸš¢/file1.txt'
  touch 'ship_itğŸš¢/file2.txt'
  touch 'ship_itğŸš¢/file3.txt'
end
